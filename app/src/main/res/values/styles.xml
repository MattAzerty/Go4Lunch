<resources>

    <style name="Widget.Theme.Go4Lunch.ButtonBar.Fullscreen" parent="">
        <item name="android:background">#65FFFFFF</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <!-- STYLE FOR MAIN ACTIVITY -->
    <style name="AppTheme.NoTitle" parent="">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="actionBarTheme">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>


    <!-- STYLE SIGN-IN ACTIVITY -->
    <style name="LoginTheme" parent="android:Theme.Light.NoTitleBar">
        <item name="colorPrimary">@color/primaryDark</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:windowBackground">@color/primary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- STYLE MaterialComponents -->
    <style name="ShapeAppearance.Go4Lunch.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearance.Go4Lunch.MediumComponent.ItemRV" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomLeft">40dp</item>
    </style>

</resources>