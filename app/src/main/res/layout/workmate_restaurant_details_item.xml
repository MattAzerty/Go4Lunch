<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/workmate_restaurant_details_item_iv_pfp"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/workmate_restaurant_details_item_tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:singleLine="true"
        android:textStyle="bold"
        android:textColor="@color/secondaryDark"
        app:layout_constraintWidth_max="200dp"
        app:layout_constraintStart_toEndOf="@id/workmate_restaurant_details_item_iv_pfp"
        app:layout_constraintBottom_toBottomOf="@+id/workmate_restaurant_details_item_iv_pfp"
        app:layout_constraintTop_toTopOf="@+id/workmate_restaurant_details_item_iv_pfp"
        app:layout_constraintEnd_toStartOf="@id/workmate_restaurant_details_item_tv_mainfield"
        tools:text="@string/username" />

    <TextView
        android:id="@+id/workmate_restaurant_details_item_tv_mainfield"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_min="100dp"
        android:layout_marginRight="20dp"
        android:text="@string/lunchmates_item"
        android:textStyle="bold"
        android:textColor="@color/secondaryDark"
        app:layout_constraintBottom_toBottomOf="@+id/workmate_restaurant_details_item_iv_pfp"
        app:layout_constraintLeft_toRightOf="@id/workmate_restaurant_details_item_tv_username"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/workmate_restaurant_details_item_iv_pfp"/>

</androidx.constraintlayout.widget.ConstraintLayout>