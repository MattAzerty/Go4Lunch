<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingBottom="8dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/workmate_item_cv"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        app:shapeAppearance="@style/ShapeAppearance.Go4Lunch.MediumComponent.ItemRV"
        app:cardElevation="0dp"
        android:backgroundTint="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/workmate_item_l1"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="9dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/workmate_item_username"
                android:background="@color/secondaryDark" />


    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/workmate_item_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="4dp"
        android:layout_marginLeft="40dp"
        android:paddingLeft="50dp"
        android:paddingBottom="2dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#F2FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/workmate_item_cv"
        app:layout_constraintTop_toTopOf="@+id/workmate_item_cv"
        tools:text="Jean BINOT " />

    <TextView
        android:id="@+id/workmate_item_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#9C481B"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@id/workmate_item_username"
        app:layout_constraintStart_toStartOf="@id/workmate_item_username"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="jbinot@email.com" />

    <TextView
        android:id="@+id/workmate_item_mainfield"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:paddingRight="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:singleLine="true"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/ap_font"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Mange au McDo" />

    <ImageView
        android:id="@+id/workmate_item_avatar"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:elevation="10dp"
        android:padding="4dp"
        android:outlineProvider="none"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="3dp"
        app:layout_constraintStart_toStartOf="@id/workmate_item_cv"
        app:layout_constraintBottom_toBottomOf="@id/workmate_item_cv"/>

    <ImageView
        android:id="@+id/workmate_item_avatar_border"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:elevation="9dp"
        android:outlineProvider="none"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="17dp"
        android:layout_marginBottom="34dp"
        android:backgroundTint="@color/secondaryDark"
        android:background="@drawable/shape_circle_profile_header"
        app:layout_constraintBottom_toBottomOf="@id/workmate_item_cv"
        app:layout_constraintTop_toTopOf="@id/workmate_item_cv" />

</androidx.constraintlayout.widget.ConstraintLayout>